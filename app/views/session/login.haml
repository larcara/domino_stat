.container
  .row
    .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title Please Sign In
        .panel-body
          =form_tag(url_for(:action => 'create') , class: "form")     do
            %fieldset
              .form-group
                =select_tag :server, options_for_select(@servers), :placeholder => "", class: "form-control"
              .form-group
                %input.form-control{:autofocus => "", :name => "username_or_email", :placeholder => "E-mail", :type => "email"}
              .form-group
                %input.form-control{:name => "password", :placeholder => "Password", :type => "password", :value => ""}
              .checkbox
                %label
                  %input{:name => "remember", :type => "checkbox", :value => "Remember Me"}
                    Remember Me
              / Change this to a button or input when using this as a form
              %button.btn.btn-lg.btn-success.btn-block Login
