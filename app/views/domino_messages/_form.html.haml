= form_for @domino_message do |f|
  - if @domino_message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@domino_message.errors.count, "error")} prohibited this domino_message from being saved:"
      %ul
        - @domino_message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :time
    = f.time_select :time
  .field
    = f.label :domino_server_id
    = f.number_field :domino_server_id
  .field
    = f.label :messageid
    = f.text_field :messageid
  .field
    = f.label :notes_message_id
    = f.text_field :notes_message_id
  .field
    = f.label :mail_from
    = f.text_field :mail_from
  .field
    = f.label :mail_to
    = f.text_field :mail_to
  .field
    = f.label :size
    = f.number_field :size
  .field
    = f.label :smtp_from
    = f.text_field :smtp_from
  .field
    = f.label :mail_relay
    = f.text_field :mail_relay
  .field
    = f.label :forward_by_rule
    = f.text_field :forward_by_rule
  .field
    = f.label :message_type
    = f.text_field :message_type
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :notes
    = f.text_area :notes
  .actions
    = f.submit 'Save'
